{
    "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",
      "moduleResolution": "Node",
      "rootDir": "src",
      "outDir": "dist",
      "esModuleInterop": true,
      "declaration": true,
      "strict": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "types": ["node"],
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "tests"],
  }
  