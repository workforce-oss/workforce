{
  "name": "workforce-server",
  "version": "0.1.0",
  "description": "Workforce modular server",
  "main": "dist/index.js",
  "author": "Jeff Joneson",
  "license": "Apache-2.0",
  "type": "module",
  "engines": {
    "node": ">=20.11.0"
  },
  "scripts": {
    "start": "node index.js",
    "start:local": "tsc && NODE_ENV=local node dist/index.js",
    "build": "tsc",
    "package": "esbuild --bundle src/index.ts --outfile=dist/index.mjs --format=esm --platform=node --target=node18 --external:aws-sdk --external:nock --external:mock-aws-s3 --loader:.html=text --banner:js='import { createRequire as topLevelCreateRequire } from \"module\";\n const require = topLevelCreateRequire(import.meta.url);'",
    "test:e2e": "tests/e2e.sh",
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'tests/**/*.ts'"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "check-coverage": true,
    "reporter": [
      "text",
      "text-summary",
      "html",
      "lcov"
    ],
    "exclude": [
      "src/**/model.ts",
      "src/index.ts",
      "src/tests/**/*"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "report-dir": "coverage",
    "temp-dir": "coverage/.nyc_output"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-oauth2-jwt-bearer": "^1.5.0",
    "express-ws": "^5.0.2",
    "sequelize": "^6.32.1",
    "sequelize-typescript": "2.1.6",
    "ts-node": "^10.9.1",
    "workforce-core": "0.1.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-ws": "^3.0.1",
    "@types/node": ">=20.16.10",
    "esbuild": "^0.24.0",
    "nodemon": "^2.0.22",
    "ts-loader": "^9.5.1",
    "typescript": "^5.1.3",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  }
}
