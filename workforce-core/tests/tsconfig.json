{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "rootDir": "../",
        "outDir": "dist",
        "esModuleInterop": true,
        "declaration": true,
        "strict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "types": [
            "node",
            "mocha"
        ],
        "skipLibCheck": true,
        "resolveJsonModule": true,
    },
    "include": [
        "**/*",
    ],
    "exclude": [
        "node_modules",
        "dist",
    ],
}