{
  "title": "Org",
  "description": "An organization is a logical grouping of resources and users.",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "The unique identifier for the organization",
      "readOnly": true
    },
    "name": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": [
        "active",
        "inactive"
      ]
    },
    "description": {
      "type": "string"
    },
    "company": {
      "type": "string"
    }
  },
  "required": [
    "name",
    "status",
    "description"
  ]
}