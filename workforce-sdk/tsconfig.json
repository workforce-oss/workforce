{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": [
      "node",
      "mocha"
    ],
    "skipLibCheck": true,
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "tests",
    "node_modules",
    "dist",
  ],
}